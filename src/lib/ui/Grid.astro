---
interface Props {
  variant?: 'offset' | 'small';
}

const { variant } = Astro.props;
---

<ul
  class:list={[
    'grid list-none auto-rows-fr gap-4 p-0',
    'bp:grid-cols-2 bp:gap-16',
    variant === 'small'
      ? [
          'grid-cols-2 gap-6',
          '[&_>_*]:basis-80',
          '[&_>_:last-child:nth-child(odd)]:col-[1_/_3]',
          'bp:flex bp:flex-wrap bp:justify-center bp:gap-8'
        ]
      : [
          'bp:pb-32',
          'bp:[&_>_:nth-child(odd)]:translate-y-32',
          'bp:[&_>_:last-child:nth-child(odd)]:transform-none',
          'bp:[&_>_:last-child:nth-child(odd)]:col-[2_/_3]'
        ]
  ]}>
  <slot />
</ul>
